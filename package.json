{
	"name": "bridge-bot",
	"version": "1.0.0",
	"main": "dist",
	"license": "MIT",
	"private": false,
	"scripts": {
		"build": "tsc && pnpm copy-files",
		"clean": "rm -r dist/",
		"copy-files": "copyfiles -u 1 src/**/*.png dist/",
		"dev": "ts-node-dev --respawn --transpile-only --poll src/index.ts",
		"lint:fix": "pnpm lint --fix",
		"lint": "eslint . --ext .ts,.tsx",
		"pm2": "pm2 logs && pm2 start dist/index.js --name bridge",
		"pm2:kill": "pm2 kill",
		"prettier:check": "prettier --check \"**/*.{ts,tsx}\"",
		"prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
		"setup-files": "node setupFiles.js",
		"start": "node .",
		"test": "pnpm prettier:check && pnpm lint && pnpm typecheck && pnpm build",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"consola": "^2.15.3",
		"copyfiles": "^2.4.1",
		"discord.js": "14.15.3",
		"dotenv": "^16.0.3",
		"mineflayer": "^4.17.0",
		"node-fetch": "^3.3.2",
		"obscenity": "^0.1.4",
		"prismarine-chat": "^1.9.1"
	},
	"devDependencies": {
		"@types/node-fetch": "^2.6.2",
		"@typescript-eslint/eslint-plugin": "^5.40.1",
		"@typescript-eslint/parser": "^5.36.1",
		"eslint": "^8.26.0",
		"eslint-config-prettier": "^8.6.0",
		"prettier": "^2.8.4",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.8.4"
	}
}
